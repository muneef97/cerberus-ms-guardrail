{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Canonical DFD Schema",
    "type": "object",
    "required": ["version", "nodes", "trust_boundaries", "flows"],
    "properties": {
      "version": {
        "type": "string",
        "pattern": "^\\d+\\.\\d+\\.\\d+$"
      },
      "metadata": {
        "type": "object",
        "properties": {
          "name": { "type": "string" }
        },
        "additionalProperties": true
      },
      "nodes": {
        "type": "object",
        "required": ["processes", "data_stores", "external_entities"],
        "properties": {
          "processes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "name", "trust_boundary_id"],
              "properties": {
                "id": { "type": "string", "minLength": 1 },
                "name": { "type": "string", "minLength": 1 },
                "trust_boundary_id": { "type": "string", "minLength": 1 }
              },
              "additionalProperties": false
            }
          },
          "data_stores": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "name", "trust_boundary_id"],
              "properties": {
                "id": { "type": "string", "minLength": 1 },
                "name": { "type": "string", "minLength": 1 },
                "trust_boundary_id": { "type": "string", "minLength": 1 }
              },
              "additionalProperties": false
            }
          },
          "external_entities": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "name", "trust_boundary_id"],
              "properties": {
                "id": { "type": "string", "minLength": 1 },
                "name": { "type": "string", "minLength": 1 },
                "trust_boundary_id": { "type": "string", "minLength": 1 }
              },
              "additionalProperties": false
            }
          }
        }
      },
      "trust_boundaries": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["id", "name"],
          "properties": {
            "id": { "type": "string", "minLength": 1 },
            "name": { "type": "string", "minLength": 1 }
          },
          "additionalProperties": false
        }
      },
      "flows": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["id", "source", "target", "data", "protocol"],
          "properties": {
            "id": { "type": "string", "minLength": 1 },
            "source": { "type": "string", "minLength": 1 },
            "target": { "type": "string", "minLength": 1 },
            "data": { "type": "string", "minLength": 1 },
            "protocol": { "type": "string", "minLength": 1 }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
  